@page "/fetchdata"
@using System.Net.Http
@inject HttpClient Http

<h1>Anime Tiddies</h1>

<Button Type="primary" @onclick="LoadAnime">Load Anime!</Button>

<p>This component demonstrates fetching data from the anime server.</p>

@if (animes == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var anime in animes)
            {
                <tr>
                    <td>@anime.name</td>
                    <td>@anime.score</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Anime[] animes;

    protected override async Task OnInitializedAsync() =>
        animes = await Http.GetFromJsonAsync<Anime[]>("https://localhost:5031/anime/popular");

    private async Task LoadAnime()
    {
        animes = await Http.GetFromJsonAsync<Anime[]>("https://localhost:5031/anime/popular");
    }

    public class Anime
    {
        public string name { get; set; }
        public int score { get; set; }
    }
}
